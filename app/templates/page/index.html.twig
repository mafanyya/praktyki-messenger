{% extends 'root/index.html.twig' %}
{% block header %}
    <link href="{{ asset('css/root.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/page.css') }}" rel="stylesheet"/>
    {{ parent() }}
{% endblock %}

{%  block body %}
    <body>
    <div class="container">
        <div class="main_inf">
            <div class="avatar_inf">
                <div class="avatar_page">
                    <img class = "avatar_content_page" src="{{ avatar }}">
                </div>
                <div class="add_avatar">
                    <a href="#">Change avatar</a>
                </div>
            </div>
            <div class="user_inf">
                <div class="username_page">
                    <p>{{ username }}</p>
                </div>
                <div class="email">
                    <p><i class="bi bi-envelope"></i> {{ email}}</p>
                </div>
                <div class="country">
                    <p><i class="bi bi-globe"></i> {{ country }}</p>
                </div>

                <div class="friends">
                    <a href="/users">Users</a>
                    <a href="/friends/{id}">Friends</a>
                </div>
            </div>

        </div>


    </div>
    </body>

{% endblock %}

